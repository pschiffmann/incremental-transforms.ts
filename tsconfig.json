{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "esnext"
    ],
    "downlevelIteration": true,
    "target": "ES2018",
    "rootDir": "src",
    "moduleResolution": "node"
  }
}